<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtDummyTitle"
        style="@style/TitleText.StateEnableOrDisable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:text="روش کار برنامه"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDummyDescription"
        style="@style/SubTitleText.Gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="این برنامه با گرفتن لوکیشن شما در هنگام دویدن یا پیاده روی، مدت زمان، مسافت، کالری سوخته شده و میانگین سرعت شما را محاسبه می‌کند. آیا اجازه دسترسی به لوکیشن میدهید؟"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtDummyTitle"
        app:layout_constraintTop_toBottomOf="@+id/txtDummyTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAgree"
        style="@style/CustomButton.Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="اجازه می‌دهم"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnNotAgree"
        app:layout_constraintTop_toBottomOf="@+id/txtDummyDescription" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNotAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="اجازه نمی‌دهم"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btnAgree"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAgree" />


    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cbDoNotAskAgain"
        style="@style/SubTitleText.Gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:checked="false"
        android:text="دوباره پرسیده نشود"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtDummyDescription"
        app:layout_constraintTop_toBottomOf="@+id/btnNotAgree" />


</androidx.constraintlayout.widget.ConstraintLayout>