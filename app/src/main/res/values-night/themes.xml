    <style name="SubTitleText.StateEnableOrDisableOrError.Right" parent="SubTitleText.StateEnableOrDisableOrError">
        <item name="android:background">@drawable/edit_profile_custom_btn_right_selected_deselected_night</item>
    </style>

    <style name="HelperText" parent="MyTextVazirUltraLight">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="HelperText.Gray" parent="HelperText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HelperText.Gray.Big" parent="HelperText.Gray">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="TitleNumbers" parent="MyTextKoodak">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--endregion-->

    <!--region <<<<<<<<<< BUTTONS >>>>>>>>>>-->

    <style name="MyTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/vazir_light</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/vazir_light</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <!--<style name="CustomButton.DisableOrEnable" parent="MyButton">
