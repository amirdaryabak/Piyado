    <style name="CustomButton" parent="MyTextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButton.Transparent" parent="MyTextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CustomButton.Enabled" parent="MyTextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/black_cards</item>
    </style>

    <style name="CustomButton.Disabled" parent="MyTextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/gray_4</item>
    </style>

    <style name="CustomButton.Rounded" parent="MyTextButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black_solid</item>
    </style>

