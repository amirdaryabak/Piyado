    <style name="TitleText.White" parent="TitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText.White.Small" parent="TitleText.White">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TitleText.StateEnableOrDisable" parent="TitleText">
        <item name="android:textColor">@drawable/text_view_h2_states_night</item>
    </style>

    <style name="SubTitleText" parent="MyTextVazirLight">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="SubTitleText.Gray" parent="SubTitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitleText.PrimaryColor" parent="SubTitleText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="SubTitleText.White" parent="SubTitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitleText.Black" parent="SubTitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubTitleText.Gray.Small" parent="SubTitleText.Gray">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>

    <style name="SubTitleText.Gray.Small.AccentColor" parent="SubTitleText.Gray">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/logoRed</item>
    </style>

    <style name="SubTitleText.StateEnableOrDisableOrError" parent="SubTitleText">
        <item name="android:textColor">@drawable/edit_profile_custom_btn_selected_deselected_txt_night</item>
    </style>

    <style name="SubTitleText.StateEnableOrDisableOrError.Filtering" parent="SubTitleText.StateEnableOrDisableOrError">
        <item name="android:textColor">@drawable/edit_profile_custom_btn_selected_deselected_txt_night</item>
    </style>

    <style name="SubTitleText.Small.StateEnableOrDisableOrError.Filtering" parent="SubTitleText.Gray.Small">
        <item name="android:textColor">@drawable/edit_profile_custom_btn_selected_deselected_txt_night</item>
    </style>

    <style name="SubTitleText.StateEnableOrDisableOrError.Left" parent="SubTitleText.StateEnableOrDisableOrError">
        <item name="android:background">@drawable/edit_profile_custom_btn_left_selected_deselected_night</item>
    </style>

    <style name="SubTitleText.StateEnableOrDisableOrError.Center" parent="SubTitleText.StateEnableOrDisableOrError">
        <item name="android:background">@drawable/edit_profile_custom_btn_center_selected_deselected_night</item>
