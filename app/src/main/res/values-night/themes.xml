<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/vazir_medium</item>
        <!--> toolbar color -->
        <item name="colorSurface">@color/black</item>
    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--region <<<<<<<<<< TEXTS >>>>>>>>>>-->

    <style name="MyTextVazirLight" parent="Theme.AppTheme">
        <item name="android:fontFamily">@font/vazir_light</item>
    </style>
    <style name="MyTextVazirUltraLight" parent="Theme.AppTheme">
        <item name="android:fontFamily">@font/vazir_ultra_light</item>
    </style>
    <style name="MyTextKoodak" parent="Theme.AppTheme">
        <item name="android:fontFamily">@font/koodak_bold</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="TitleText" parent="MyTextVazirLight">
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="TitleText.PrimaryColor" parent="MyTextVazirLight">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleText.AccentColor" parent="MyTextVazirLight">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TitleText.Gray" parent="TitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText.Gray.Big" parent="TitleText.Gray">
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="TitleText.Black" parent="TitleText">
        <item name="android:textColor">@color/white</item>
